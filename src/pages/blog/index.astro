  <Header />

  <main class="max-w-7xl mx-auto px-4 py-12 sm:py-20">
    <div class="text-center mb-12 sm:mb-16">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-6 animate-fade-in-up leading-[1.3]">
        <span class="block bg-gradient-to-r from-gray-900 via-purple-900 to-pink-900 dark:from-gray-100 dark:via-purple-300 dark:to-pink-300 bg-clip-text text-transparent pb-4 sm:pb-5">
