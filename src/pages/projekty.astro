            {project.mainImage ? (
              <img
                src={urlFor(project.mainImage).width(600).url()}
                alt={project.title}
                loading="lazy"
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
              />
            ) : (
              <div class="text-6xl sm:text-7xl transform group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                {project.category === 'ecommerce' ? 'üõçÔ∏è' :
                 project.category === 'webapp' ? '‚ö°' :
                 project.category === 'mobile' ? 'üì±' : 'üåê'}
              </div>
            )}
          </div>

          <div class="relative z-20 p-6">
            <div class="inline-block px-3 py-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-xs font-bold rounded-full mb-3 transform group-hover:scale-110 transition-transform duration-300">
              {project.category}
            </div>

            <h2 class="text-xl sm:text-2xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-purple-600 dark:group-hover:from-blue-400 dark:group-hover:to-purple-400 transition-all duration-300 leading-snug">
              {project.title}
            </h2>

            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2 text-sm sm:text-base">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies?.map(tech => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-xs font-medium hover:bg-gradient-to-r hover:from-purple-100 hover:to-pink-100 dark:hover:from-purple-900 dark:hover:to-pink-900 transition-all duration-300">
                  {tech}
                </span>
              ))}
            </div>

            {project.url && (
              <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
