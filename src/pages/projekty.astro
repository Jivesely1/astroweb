---
import MainLayout from '../layouts/MainLayout.astro';
import { client, urlFor } from '../lib/sanity';

const projects = await client.fetch(`
  *[_type == "project"] | order(_createdAt desc) {
    _id,
    title,
    slug,
    category,
    description,
    technologies,
    mainImage,
    url
  }
`);
---

<MainLayout
  title="Portfolio"
  description="V√Ωbƒõr z realizovan√Ωch projekt≈Ø, kter√© pomohly klient≈Øm dos√°hnout jejich c√≠l≈Ø"
>
  <main class="max-w-7xl mx-auto px-4 py-12 sm:py-20">
    <div class="text-center mb-12 sm:mb-16">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-6 animate-fade-in-up leading-[1.3]">
        <span class="block bg-gradient-to-r from-gray-900 via-purple-900 to-pink-900 dark:from-gray-100 dark:via-purple-300 dark:to-pink-300 bg-clip-text text-transparent pb-4 sm:pb-5">
          Portfolio projekt≈Ø
        </span>
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto px-4 animate-fade-in-up leading-relaxed" style="animation-delay: 0.1s;">
        V√Ωbƒõr z realizovan√Ωch projekt≈Ø, kter√© pomohly klient≈Øm dos√°hnout jejich c√≠l≈Ø
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {projects.map((project, index) => (
        <div
          class="group relative bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-4 animate-fade-in-up border border-gray-100 dark:border-gray-700"
          style={`animation-delay: ${index * 0.15}s;`}
        >
          <div class="absolute inset-0 bg-gradient-to-br from-blue-600/0 via-purple-600/0 to-pink-600/0 group-hover:from-blue-600/10 group-hover:via-purple-600/10 group-hover:to-pink-600/10 transition-all duration-500 z-10"></div>

